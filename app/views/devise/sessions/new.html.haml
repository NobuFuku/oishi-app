.AccountPage
  .AccountTop
    %span.image
      = image_tag src="/assets/oisi-app-logo.png", size: "450x90",class:"logo__top"
  .AccountTop__main
    .span.image
      = image_tag src="/assets/tomato-girl.jpg",  class:"login-page"

  .AccountPage__container
    .AccountPage__title
      %h2 Account Login
      %h5 登録しているユーザーでログイン
      = render "devise/shared/links"
    .AccountPage__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .FormField
          .FormField__label--normal
            = f.label :email
          .FormField__input--normal
            = f.email_field :email, autofocus: true
          .FormField
            .FormField__label--normal
              = f.label :password
              %i (英数字8文字以上)
            .FormField__input--normal
              = f.password_field :password, autocomplete: "off"
          .actions
            = f.submit "Log in", class: 'Button UserButton'
    
  .App-explain1
    .App-explain1__text
      %span.image
      = image_tag src="/assets/copy1.jpg", size: "550x500"

    .App-explain1__image
      %span.image
      = image_tag src="/assets/copy-image.jpg", size: "550x500"

  .App-explain2
    .App-explain2__image
      %span.image
      = image_tag src="/assets/car.jpg", size: "600x500"
      
    .App-explain2__text
      %span.image
      = image_tag src="/assets/howuse.jpg", size: "550x500"
  
  .App-explain3
    .App-explain3__text
      %span.image
      = image_tag src="/assets/oishiureshi.jpg", size: "550x500"

    .App-explain3__image
